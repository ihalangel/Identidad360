identidad360/
│
├── public/
│   ├── favicon.ico
│   └── other-assets/
│
├── src/
│   ├── app/
│   │   ├── favicon.ico                   // Icono de la aplicación
│   │   ├── layout.tsx                    // Layout principal de la aplicación
│   │   ├── page.tsx                      // Página principal (equivalente a index.js)
│   │   ├── blog/
│   │   │   ├── page.tsx                  // Página principal del blog (equivalente a blog/index.js)
│   │   │   └── [slug]/
│   │   │       └── page.tsx              // Página de cada artículo del blog (equivalente a blog/[slug].js)
│   │   └── api/
│   │       └── hello.ts                // API route (equivalente a api/hello.js)
│   │
│   ├── components/
│   │   ├── Header.tsx                    // Componente Header
│   │   ├── Hero.tsx                      // Componente Hero
│   │   ├── Services.tsx                  // Componente Services
│   │   ├── Precios.tsx                   // Componente Precios
│   │   ├── Portafolio.tsx                // Componente Portafolio
│   │   ├── Testimonios.tsx               // Componente Testimonios
│   │   ├── Contacto.tsx                  // Componente Contacto
│   │   ├── Footer.tsx                    // Componente Footer
│   │   └── blog/
│   │       ├── BlogList.tsx              // Componente para la lista de artículos del blog
│   │       └── BlogPost.tsx              // Componente para un artículo del blog
│   │
│   ├── styles/
│   │   ├── globals.css                   // Estilos globales
│   │   ├── App.css                       // Estilos específicos para la aplicación
│   │   ├── Base.css                      // Estilos base
│   │   ├── Header.module.css             // Estilos específicos para el Header
│   │   ├── Hero.module.css               // Estilos específicos para el Hero
│   │   ├── Services.module.css           // Estilos específicos para Services
│   │   ├── Precios.module.css            // Estilos específicos para Precios
│   │   ├── Portafolio.module.css         // Estilos específicos para Portafolio
│   │   ├── Testimonios.module.css        // Estilos específicos para Testimonios
│   │   ├── Contacto.module.css           // Estilos específicos para Contacto
│   │   ├── BlogList.module.css           // Estilos específicos para la lista de blogs
│   │   └── BlogPost.module.css           // Estilos específicos para los artículos del blog
│   │
│   └── utils/
│       ├── analytics.ts                  // Utilidades para análisis
│       └── posts.ts                     // Utilidades para manejar los posts del blog
│
│
│
│
│
│
│
│
